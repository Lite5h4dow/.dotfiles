local fn = vim.fn
local o = vim.o
local g = vim.g

-- Enable Line numbers
o.number = true

-- set encoding to utf8
o.encoding = "utf8"

-- Enable AutoSaving
g.auto_save = true

-- Set Indention Depth
o.shiftwidth = 2

-- set split opening directions
o.splitbelow = true
o.splitright = true

-- auto reload on file change
o.autoread = true

-- extended configs
require 'neovide'
require 'plugins'
require 'limelight'
require 'statusline'
require 'lsp'
require 'rebinds'
-- require 'fzf'

-- Set nord as colorscheme
vim.cmd('colorscheme nord')

require"nvim-web-devicons".setup{
  default = true;
}



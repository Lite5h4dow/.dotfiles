local util = require 'lspconfig.util'
local lsp = require 'lsp-zero'

local config ={
  default_config = {
    root_dir = function()
      return nvim_lsp.util.root_pattern("deno.json")
    end,
    init_options = {
      lint = true,
    },
  }
}

return function(name)
  lsp.configure(name, config)
end


#!/bin/bash

echo "2. Set up dev environments"

echo "installing default extensions to vscode"

default_extensions=("ms-vscode.vscode-typescript-next" "denoland.vscode-deno" "trixnz.vscode-lua" "ms-azuretools.vscode-docker" "rust-lang.rust" "vscodevim.vim")

for ext in ${default_extensions[*]}; do
	echo "installing $ext ..."
	if ! eval "code --force --install-extension $ext &> /dev/null"; then
		echo "install failed"
		exit 1
	fi
done

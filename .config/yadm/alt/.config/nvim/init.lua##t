local fn = vim.fn
local o = vim.o
local g = vim.g

-- Enable Line numbers
o.number = true

-- Set font to "FiraCode NerdFonts Monospaced"
o.guifont = "FiraCode Nerd Font:h10"

-- Enable AutoSaving
g.auto_save = true

-- Set Indention Depth
o.shiftwidth = 2

-- set split opening directions
o.splitbelow = true
o.splitright = true

-- auto reload on file change
o.autoread = true

-- extended configs
require 'neovide.lua'
require 'plugins.lua'
require 'rebinds.lua'
require 'limelight.lua'
require 'statusline.lua'
-- require 'fzf.lua'

-- Set Gruvbox as colorscheme
vim.cmd('colorscheme gruvbox')

local map = vim.api.nvim_set_keymap
local a = vim.api
local v = vim.v
local g = vim.g

map('n', '<Space>', '', {})
vim.g.mapleader = ' ' -- global leader is space

options = {noremap = true}

-- find file by name (fzf)
map('n', '<C-p>', ':Files<cr>', options)

-- toggle limelight
map('n', '<Leader><Esc>', ':Limelight!!<cr>', options)

-- find file by string
map('n', '<C-S-f>', ':Ag<cr>', options)

-- move between splits
map('n', '<C-j>', '<C-w><C-j>', options)
map('n', '<C-k>', '<C-w><C-k>', options)
map('n', '<C-h>', '<C-w><C-h>', options)
map('n', '<C-l>', '<C-w><C-l>', options)

-- open in splits (fzf)
g.fzf_action = {'ctrl-s': 'split', 'ctrl-v': 'vsplit'}

-- find selected (fzf)
map('v', '<C-S-f>', 'y<ESC>:ag <C-r>"' )

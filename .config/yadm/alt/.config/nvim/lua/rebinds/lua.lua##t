local map = vim.api.nvim_set_keymap
local a = vim.api
local v = vim.v
local g = vim.g

map('n', '<Space>', '', {})
vim.g.mapleader = ' ' -- global leader is space

options = {noremap = true}

-- find file by name (fzf)
map('n', '<C-p>', ':Files<cr>', options)

-- toggle limelight
map('n', '<Leader><Esc>', ':Limelight!!<cr>', options)

-- find file by string
map('n', '<C-f>', ':Ag<cr>', options)

-- move between splits
map('n', '<C-h>', '<C-w><C-h>', options) -- move left
map('n', '<C-j>', '<C-w><C-j>', options) -- move down
map('n', '<C-k>', '<C-w><C-k>', options) -- move up
map('n', '<C-l>', '<C-w><C-l>', options) -- move right

-- find selected (fzf)
map('v', '<C-f>', 'y<ESC>:Ag <C-r>"<cr>', options )

-- convenient insert mode enter rebinds
map('i', '<C-CR>', '<ESC>o', options) -- insert line below while editing
map('i', '<C-S-CR>', '<ESC>O', options) -- insert line above while editing

-- open terminal
map('n', '<Leader><CR>', ':split | resize 10 | term<CR>', options)

-- navigate while terminal is open
map('t', '<ESC>', '<C-\\><C-n>', options) -- escape to normal mode
map('t', '<C-h>', '<C-\\><C-n><C-w><C-h>', options) -- escape to the left
map('t', '<C-j>', '<C-\\><C-n><C-w><C-j>', options) -- escape to the down
map('t', '<C-k>', '<C-\\><C-n><C-w><C-k>', options) -- escape to the up
map('t', '<C-l>', '<C-\\><C-n><C-w><C-l>', options) -- escape to the right

